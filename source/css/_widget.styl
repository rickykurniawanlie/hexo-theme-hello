.widget {
  margin-bottom: 20px;

 .widget-title {
   padding: 5px 0;
   margin: 0 15px;
   position: relative;
   display: inline-block;
   font-size: 16px;
   font-weight: 600;
   font-family: 'Varela Round', sans-serif;
   color: #444;
   text-transform: uppercase;

   &::after {
     display: inline-block;
     height: 1px;
     width: 100%;
     content: "";
     border-top: 2px solid #410073;
     position: absolute;
     left: 0px;
     bottom: 0px;
   }
 }
}

.recent {
  .recent-post {
    margin: 0 15px;
    padding: 5px 0;
    list-style: none;
  }

  .recent-post-item {
    display: block;
    line-height: 1.6;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
  }

  .recent-post-link {
    &:hover {
      color: #410073;
    }
  }
}

.tagcloud {
  .tagcloud-wrapper {
    margin: 0 15px;
    padding: 5px 0;

    a {
      display: inline-block;
      line-height: 1.6;
      margin-right: 5px;
      word-wrap: break-word;
      transition-duration: 0.2s;
      transition-property: transform;
      transition-timing-function: ease-out;

      &:active,
      &:focus,
      &:hover {
        color: #410073;
        transform: scale(1.1);
      }
    }
  }
}

.categories {
  .category-list {
    margin: 0 15px;
    padding: 5px 0;
    list-style: none;
  }

  .category-list-item {
    display: block;
    line-height: 1.6;
    position: relative;
  }

  .category-list-link {
    &:hover {
      color: #410073;
    }
  }

  .category-list-count {
    font-size: .8em;
    color: #410073;
    position: absolute;
    top: -3px;
    margin-left: 2px;
  }
}

.archives {
  .archive-list {
    margin: 0 15px;
    padding: 5px 0;
    list-style: none;
  }

  .archive-list-item {
    display: block;
    line-height: 1.6;
    position: relative;
  }

  .archive-list-link {
    &:hover {
      color: #410073;
    }
  }

  .archive-list-count {
    font-size: .8em;
    color: #410073;
    position: absolute;
    top: -3px;
    margin-left: 2px;
  }
}

.links {
  .link-list {
    margin: 0 15px;
    padding: 5px 0;
    list-style: none;
  }

  .link-list-item {
    display: block;
    line-height: 1.6;
    position: relative;
  }

  .link-list-link {
    &:hover {
      color: #410073;
    }
  }
}


@media (max-width: 960px) {
  .widget {
    text-align: center;
  }

  .recent {
    display: none;
  }

  .categories {
    .category-list-item {
      display: inline-block;
      margin-right: 30px;
    }
  }

  .archives {
    display: none;
  }

  .links {
    .link-list-item {
      display: inline-block;
      margin-right: 30px;
    }
  }
}
