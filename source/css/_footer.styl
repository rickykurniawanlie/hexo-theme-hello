.footer {
  margin-top: 20px;
  padding: 30px 0;
  font-size: 14px;
  background: #f1f1f1;

  .copyright {
    float: left;
    margin: 0;
  }

  .power-by {
    float: right;
    margin: 0;
  }

  a {
    color: #410073;

    &:hover {
      color: darken(#410073, 20%);
    }
  }
}

@media (max-width: 970px) {
  .footer {
    text-align: center;

    .copyright,
    .power-by {
      float: none;
    }
  }
}
